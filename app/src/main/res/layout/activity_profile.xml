<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.github.papered.a15th_appzam.Activity.SetProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="마이페이지"
            android:textColor="#fff"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/setProfile_img_profile"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/oval"
            android:src="@drawable/ic_person_black_24dp"
            android:layout_marginBottom="10dp"/>

        <!--<ImageView-->
        <!--android:id="@+id/setProfile_img_profile"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="180dp"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:background="@color/colorPrimaryDark"-->
        <!--android:src="@drawable/ic_person_black_24dp" />-->

        <!--<Button-->
        <!--android:id="@+id/setProfile_btn_addImg"-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginBottom="30dp"-->
        <!--android:background="@color/colorPrimary"-->
        <!--android:gravity="center"-->
        <!--android:text="프로필 이미지 추가"-->
        <!--android:textColor="#fff"-->
        <!--android:textSize="20dp"-->
        <!--android:textStyle="bold" />-->

        <TextView
            android:id="@+id/Profile_nickname"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:drawableRight="@drawable/ic_edit_black_24dp"
            android:gravity="center"
            android:text="Nickname"
            android:textColor="#000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textSize="12dp"
            android:text="한줄소개"
            android:textColor="#000"
            android:gravity="top|center" />

        <Button
            android:id="@+id/log"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textSize="15dp"
            android:text="활동내역"
            android:layout_gravity="center"
            android:textColor="#000"
            android:gravity="center"/>

        <Button
            android:id="@+id/change_password"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="비밀번호 변경"
            android:textColor="#ff0000"/>

    </LinearLayout>

    <Button
        android:id="@+id/setProfile_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="저장"
        android:textColor="#fff"
        android:textSize="20dp"
        android:textStyle="bold" />

</FrameLayout>
