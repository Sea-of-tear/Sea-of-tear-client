<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.github.papered.a15th_appzam.Activity.InputActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="눈물바다"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/input_text_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="완료"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <EditText
        android:id="@+id/input_edit_text"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:gravity="left"
        android:hint="제목"
        android:inputType="text"
        android:textColorHint="#000"
        android:textSize="17dp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.4">

        <ImageView
            android:id="@+id/input_image_left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/input_image_right"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_chevron_right_black_24dp"
            android:layout_gravity="center_vertical|right"/>

        <ImageView
            android:id="@+id/input_image_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#15000000"/>

        <EditText
            android:id="@+id/input_edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@null"
            android:padding="30dp"
            android:hint="고민을 입력하세요!"
            android:textSize="15sp"
            android:layout_gravity="center"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/music"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:drawableRight="@drawable/ic_music_note_black_24dp"
            android:gravity="center"
            android:text="음악" />

        <Spinner
            android:id="@+id/input_spinner"
            android:layout_width="70dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ListView
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
