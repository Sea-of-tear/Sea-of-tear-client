<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1334"
    tools:context="com.github.papered.a15th_appzam.Activity.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="453">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="#dddeff"
            android:src="@drawable/logo" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="881"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="881">

        <EditText
            android:id="@+id/ID"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="80dp"
            android:hint="ID"
            android:textColorHint="#dddeff" />

        <EditText
            android:id="@+id/PW"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="PASSWORD"
            android:textColorHint="#dddeff"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/login_btn"
            android:layout_width="170dp"
            android:layout_height="0dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="247"
            android:background="@color/colorPrimary"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/join_btn"
            android:layout_width="70dp"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:gravity="center"
            android:text="회원가입"
            android:textSize="10dp"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
</LinearLayout>
